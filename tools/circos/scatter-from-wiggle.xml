<?xml version="1.0"?>
<tool id="circos_wiggle_to_tile" name="Circos:Wiggle to Tiles" version="@WRAPPER_VERSION@">
    <description>reformats wig/bigWig files to prepare for Circos 2d scatter/line plots.</description>
    <macros>
        <import>macros.xml</import>
    </macros>
    <expand macro="requirements">
    </expand>
    <command detect_errors="exit_code"><![CDATA[
python '$__tool_directory__/scatter-from-wiggle.py' < '$input' > '$output'
    ]]></command>
    <inputs>
        <param name="input" type="data" format="wig" label="Data file" />
    </inputs>
    <outputs>
        <data name="output" format="tabular" />
    </outputs>
    <tests>
    </tests>
    <help><![CDATA[
Converts standard (big)Wig files into a format appropriate for Circos scatter/line plot tracks.
    ]]></help>
    <expand macro="citations" />
</tool>
